<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/main_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />


    <ImageButton
        android:id="@+id/main_imgbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/calendar_bg"
        android:src="@drawable/outline_calendar_month_24" />

    <ImageButton
        android:id="@+id/main_imgbtn1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/main_imgbtn"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/note_bg"
        android:onClick="openNote"
        android:src="@drawable/outline_sticky_note_2_24" />

    <ImageButton
        android:id="@+id/main_imgbtn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/main_imgbtn1"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/person_bg"
        android:onClick="openPer"
        android:src="@drawable/outline_person_24" />

</RelativeLayout>