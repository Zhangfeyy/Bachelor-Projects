<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hsitory_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/history_detail_pic"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/history_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="内容"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/history_detail_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_bg"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/main_imgbtn1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/history_detail_back"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/note_bg"
        android:onClick="openNote"
        android:src="@drawable/outline_sticky_note_2_24" />

    <ImageButton
        android:id="@+id/main_imgbtn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/main_imgbtn1"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/person_bg"
        android:onClick="openPer"
        android:src="@drawable/outline_person_24" />

    <ImageButton
        android:id="@+id/history_detail_share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/main_imgbtn2"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/share_bg"
        android:src="@drawable/baseline_share_24" />

</RelativeLayout>